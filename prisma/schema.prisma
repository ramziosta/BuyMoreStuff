generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  description      String
  imageUrl         String
  name             String
  price            Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  details          String
  additionalImages String[] // This is an array of strings

  @@map("products")
}
